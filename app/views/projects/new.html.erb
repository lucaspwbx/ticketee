<h2>New Project</h2>
<% if @project.errors.any? %>
  <h2>
    <%= pluralize(@project.errors.count, "error") %>
  </h2>
  <ul>
    <% @project.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for @project do |f| %>
  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %><br/>
    <%= f.text_field :description %><br/>
  </p>

  <%= f.submit %>
<% end %>
